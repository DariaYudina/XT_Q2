@using Epam.WebPages.UIweb.Models
@using System.Linq;

@{

    if (IsPost)
    {
        var awards = AwardModel.GetAllAwards();
        var award = awards.FirstOrDefault(x => x.AwardId == Guid.Parse(Request["awardnumber"]));
        UserModel.AddAward(Guid.Parse(Request["number"]), award);
        Response.Redirect("~/Pages/index.cshtml");
    }
    
}

