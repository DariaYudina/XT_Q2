@using Epam.WebPages.UIweb.Models
@using System.Linq;
@{
    if (IsPost)
    {
        var users = UserModel.GetAllUsers();
        var user = users.FirstOrDefault(x => x.UserId == Guid.Parse(Request["userId"]));
        var role = Request["role"];
        UserModel.AddRoleToUser(user, role);
        Response.Redirect("~/Pages/index.cshtml");
    }
}

