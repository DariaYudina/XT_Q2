
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@Page.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link href="~/Content/styles.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <img src="~/Images/brand2.png" class="brand-icon">
            </div>
            <div class="navbar-header">
                <a class="navbar-brand" href="#">IT Forum</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="~/Pages/index.cshtml">Home</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Page 1 <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Page 1-1</a></li>
                        <li><a href="#">Page 1-2</a></li>
                        <li><a href="#">Page 1-3</a></li>
                    </ul>
                </li>
                <li><a href="#">Page 2</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><a href="#" data-toggle="modal" data-target="#SignUp"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#SignIn"><span class="glyphicon glyphicon-log-in"></span> Sign in</a></li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> @User.Identity.Name</a></li>
                    <li><a href="~/Pages/Authorization/SignOut.cshtml"><span class="glyphicon glyphicon-log-in"></span> Sign Out</a></li>
                }
            </ul>
        </div>
    </nav>
    <div class="container content">
        <h3>Right Aligned Navbar</h3>
        <p>The .navbar-right class is used to right-align navigation bar buttons.</p>
        @RenderBody()

        <div class="container">
            <div class="modal fade" id="SignUp">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!-- header -->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h3 class="modal-title">Sign Up</h3>
                        </div>
                        <!-- body -->
                        <div class="modal-header">
                            <form role="form" method="post" action="~/Pages/Authorization/SignUp.cshtml" enctype="multipart/form-data" asp-controller="UploadFiles">
                                <div class="form-group" method="post" action="~/Pages/Authorization/SignUp.cshtml" enctype="multipart/form-data" asp-controller="UploadFiles">
                                    <i class="fas fa-envelope prefix grey-text"></i>
                                    <input type="text" class="form-control inputmargin" placeholder="Login" name="name" />
                                    <input type="email" class="form-control inputmargin" placeholder="Email" name="email" />
                                    <input type="password" class="form-control inputmargin" placeholder="Password" name="password" />
                                    <label for="birthday">Birthday:</label>
                                    <input type="date" class="form-control" placeholder="Birthday" name="birthday" />
                                    <label for="image">Photo:</label>
                                    <input type="file" value="" accept="image/jpeg,image/png, image/jpg" name="image" />
                                </div>
                                <button class="btn btn-dark">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="SignIn">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!-- header -->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h3 class="modal-title">Sign in</h3>
                        </div>
                        <!-- body -->
                        <div class="modal-header">
                            <form role="form" method="post" action="~/Pages/Authorization/SignIn.cshtml" enctype="multipart/form-data" asp-controller="UploadFiles">
                                <div class="form-group">
                                    <input type="text" class="form-control inputmargin" placeholder="Login" name="username" @Validation.For("username")/>
                                    @Html.ValidationMessage("username")
                                    
                                    <input type="password" class="form-control inputmargin" placeholder="Password" name="password" @Validation.For("password")/>
                                    @Html.ValidationMessage("password")
                                </div>
                                <button class="btn btn-dark k">Sign In</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer id="footer" class="footer navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - EPAM Forum</p>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.2.js">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.js">
    </script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js">
    </script>
</body>
</html>